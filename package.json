{
  "name": "matag-game",
  "version": "1.0.0",
  "description": "matag game ui",
  "private": true,
  "scripts": {
    "build-dev": "webpack --mode development",
    "build-prod": "webpack --mode production",
    "lint": "eslint src/main/js src/test/js/ --ext .js --ignore-pattern node_modules/",
    "lint-fix": "eslint src/main/js src/test/js/ --ext .js --fix",
    "postinstall": "yarn build-prod",
    "test": "jest",
    "watch": "webpack --mode development --watch",
    "watch-htmlunit": "webpack --mode production --watch"
  },
  "author": "Antonio Alonzi",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@stomp/stompjs": "^7.2.1",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1",
    "redux-devtools-extension": "^2.13.8",
    "sockjs-client": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^7.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "source-map-loader": "^5.0.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/test/js"
    ],
    "moduleNameMapper": {
      "^game/(.*)$": "<rootDir>/src/main/js/game/$1"
    },
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    }
  }
}
